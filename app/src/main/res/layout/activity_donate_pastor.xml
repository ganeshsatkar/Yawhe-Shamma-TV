<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#a9a4a4"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ScrollView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:background="@drawable/bag15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >


            <Button
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#eff5aa"
                android:textColor="#0b0b0b"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Donation Gift To Pastor"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>


            <LinearLayout

                android:id="@+id/name"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acc Name "
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#edd711"/>

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/build"
                    android:tint="#00000000"
                    android:layout_gravity="center"
                    android:layout_marginLeft="22dp"
                    android:foregroundGravity="center"/>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">

                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text=" Mr.Narendra Gaikwad"
                        android:textColor="#e2fa04"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>




            <LinearLayout
                android:id="@+id/mapaddress"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch Name   "
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#edd711"/>


                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/mapaddres"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chinchwad, Pune "
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#e2fa04"/>

                </RelativeLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>


            <LinearLayout
                android:id="@+id/stdcall"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account No  "
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#edd711"/>

                <ImageView
                    android:id="@+id/img4"
                    android:layout_marginLeft="16dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mobile"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20160338264"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#e2fa04"/>

                </RelativeLayout>

            </LinearLayout>




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>

            <LinearLayout
                android:id="@+id/email"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IFSC Code  "
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#edd711"/>

                <ImageView
                    android:id="@+id/img3"
                    android:layout_marginLeft="25dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/mail"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/email1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MAHB0000127"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textColor="#e2fa04"/>

                </RelativeLayout>

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="16sp"
                android:gravity="center"
                android:text="You can also send via UPI Pay  "
                android:textColor="#fdfc91" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:gravity="center"
                android:text="Using Mobile No :- 9960074922 "
                android:textColor="#fdfc91" />



            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/setting_LineColor"> </View>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:foregroundGravity="center"
                android:background="#fcfcfc"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:ignore="UselessParent">





                       <LinearLayout
                            android:background="#eded81"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:id="@+id/phonepe"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_margin="5dp"
                                tools:ignore="KeyboardInaccessibleWidget">


                                <LinearLayout
                                    android:background="#caf4a8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="70dp"
                                        android:background="#caf4a8"
                                        android:padding="2dp"
                                        android:src="@drawable/upilogo"
                                        tools:ignore="ContentDescription,VectorDrawableCompat" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"
                                        android:text="PhonePe"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/lightgray"
                                        android:layout_margin="5dp"/>


                                </LinearLayout>
                            </android.support.v7.widget.CardView>


                            <android.support.v7.widget.CardView
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"

                                android:id="@+id/bhim"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_margin="5dp"
                                tools:ignore="KeyboardInaccessibleWidget">


                                <LinearLayout
                                    android:background="#caf4a8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="70dp"
                                        android:background="#caf4a8"
                                        android:src="@drawable/upilogo"
                                        android:padding="2dp"
                                        tools:ignore="ContentDescription,VectorDrawableCompat" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"
                                        android:text="BHIM"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/lightgray"
                                        android:layout_margin="5dp"/>


                                </LinearLayout>
                            </android.support.v7.widget.CardView>



                            <android.support.v7.widget.CardView
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true"

                                android:id="@+id/tez"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_margin="5dp"
                                tools:ignore="KeyboardInaccessibleWidget">


                                <LinearLayout
                                    android:background="#caf4a8"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="90dp"
                                        android:layout_height="70dp"
                                        android:background="#caf4a8"
                                        android:padding="2dp"
                                        android:src="@drawable/upilogo"
                                        tools:ignore="ContentDescription,VectorDrawableCompat" />
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textStyle="bold"
                                        android:layout_marginTop="8dp"
                                        android:text="Google Pay"/>
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/lightgray"
                                        android:layout_margin="5dp"/>


                                </LinearLayout>
                            </android.support.v7.widget.CardView>




                        </LinearLayout>






                    </LinearLayout>







            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:background="@color/setting_LineColor"> </View>




        </LinearLayout>





    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/setting_LineColor" />
</LinearLayout>