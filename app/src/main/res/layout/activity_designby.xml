<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:background="#d7df92"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/lbl0"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="#eeeeee">
                <TextView
                    android:id="@+id/txt0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ABOUT DEVELOPER AND ORGANIZATION"
                    android:textSize="14sp"
                    android:textColor="#a1a1a1"
                    android:gravity="left|center"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"> </View>
            <LinearLayout
                android:id="@+id/lbl00"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="10dp"
                android:clickable="true"
                android:onClick="webcontact"
                android:background="@drawable/textview_effect">
                <ImageView
                    android:id="@+id/img10"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/grdp"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/txt20"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GRDP INFOTECH"
                        android:textSize="20sp"
                        android:layout_marginLeft="20dp"
                        android:textColor="#000000"/>

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"></View>





            <LinearLayout
                android:id="@+id/lbl1"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="#eeeeee">
                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VERSION"
                    android:textSize="14sp"
                    android:textColor="#a1a1a1"
                    android:gravity="left|center"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"></View>



            <LinearLayout
                android:id="@+id/lbl2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect">
                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/build"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center">
                    <TextView
                        android:id="@+id/txt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:id="@+id/txt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1.1.8"
                        android:textSize="14sp"
                        android:textColor="#000000"/>
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor"></View>




            <LinearLayout
                android:id="@+id/lbl3"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="#eeeeee">
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="GET HELP"
                    android:textSize="14sp"
                    android:textColor="#a1a1a1"
                    android:gravity="left|center"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />



            <LinearLayout
                android:id="@+id/lbl4"
                android:onClick="mailcontact"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect"
                android:focusable="true">
                <ImageView
                    android:id="@+id/mailcontact"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mail"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"
                    tools:ignore="ContentDescription,RtlHardcoded" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:onClick="web"
                        android:id="@+id/txt5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="info@grdpinfotech.com"
                        android:textSize="15sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />


            <LinearLayout
                android:onClick="webcontact1"
                android:id="@+id/webcontact"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/web"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"
                    tools:ignore="RtlHardcoded" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:id="@+id/txt6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="www.grdpinfotech.com"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />





            <LinearLayout
                android:id="@+id/lbl7"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/build"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"
                    tools:ignore="ContentDescription,RtlHardcoded" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:id="@+id/txt8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pune, Maharashtra"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />



            <LinearLayout
                android:onClick="phonecontact"
                android:id="@+id/phonecontact"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:clickable="true"
                android:background="@drawable/textview_effect"
                android:focusable="true">
                <ImageView
                    android:id="@+id/img5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/phone"
                    android:tint="#00000000"
                    android:layout_gravity="left|center"
                    tools:ignore="ContentDescription,RtlHardcoded" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    tools:ignore="RtlHardcoded">
                    <TextView
                        android:id="@+id/txt9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 7020862427"
                        android:textSize="14sp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#000000"
                        tools:ignore="HardcodedText" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />


            <LinearLayout
                android:id="@+id/lbl9"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="#eeeeee">
                <TextView
                    android:id="@+id/txt10"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="POWERED BY"
                    android:textSize="14sp"
                    android:textColor="#a1a1a1"
                    android:gravity="left|center"
                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />


            <LinearLayout
                android:id="@+id/lbl10"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:padding="5dp"
                android:clickable="true"
                android:background="@drawable/textview_effect"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginStart="15dp"
                    android:text="@string/copyright"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/setting_LineColor" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>